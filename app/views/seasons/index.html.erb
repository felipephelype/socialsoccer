<p id="notice"><%= notice %></p>

<div class="col-md-10 offset-md-1 jumbotron">
  <h1 class="text-center">Listing Seasons</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Number</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @seasons.each do |season| %>
        <tr>
          <td><%= season.number %></td>
          <td><%= link_to 'Show', season, class: "btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_season_path(season), class: "btn btn-primary" %></td>
          <td><%= link_to 'Destroy', season, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Season', new_season_path, class: "btn btn-primary" %>
</div>
