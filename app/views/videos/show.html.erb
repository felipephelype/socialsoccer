<%- model_class = Video -%>
<div class="col-md-8 offset-md-2 jumbotron">
  <h1 class="text-center"><%=t '.title', :default => model_class.model_name.human.titleize %></h1>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
    <dd><%= @video.url %></dd>
  </dl>
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
    <dd><%= @video.description %></dd>
  </dl>
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
    <dd><%=l @video.date %></dd>
  </dl>


  <%= link_to t('.back', :default => t("helpers.links.back")),
                videos_path, :class => 'btn btn-primary'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_video_path(@video), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                video_path(@video),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
</div>
