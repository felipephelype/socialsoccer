<%- model_class = Player -%>

<div class="col-md-12 jumbotron">
  <h1 class="text-center"><%=t '.title', :default => model_class.model_name.human.titleize %></h1>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
    <dd><%= @player.name %></dd>
    <% unless @player.nickname.blank? %>
      <dt><strong><%= model_class.human_attribute_name(:nickname) %>:</strong></dt>
      <dd><%= @player.nickname %></dd>
    <% end %>
  </dl>

  <%= link_to t('.back', :default => t("helpers.links.back")),
                players_path, :class => 'btn btn-primary'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_player_path(@player), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                player_path(@player),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
</div>
